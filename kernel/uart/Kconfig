#
# UART Devices
#

config ARCH_HAS_UART
	bool

menuconfig UART
	bool "Universal asynchronous RX/TX (UART) support"

if UART

choice
	prompt "UART baud rate"
	help
	  This setting lets you define what baudrate is for the serial
	  port.

config UART_230400
	bool "230400"

config UART_115200
	bool "115200"

config UART_57600
	bool "57600"

config UART_38400
	bool "38400"

config UART_19200
	bool "19200"

config UART_9600
	bool "9600"

config UART_4800
	bool "4800"

endchoice

config UART_METERING
	bool "Enable oscilloscope metering"
	depends EXPERIMENTAL
	help
	  All uart_putchar will be forced an output of 0x55 that can be
	  easily observed by the oscilloscope to measure the baudrate.
	  Frequency displayed by the oscilloscope will be a half of the
	  baudrate.

config UART_ASYNC
	bool "Asynchronous UART support"

if UART_ASYNC

config UART_MAX_PORTS
	int "Maximum UART ports"
	range 1 10

endif

endif

